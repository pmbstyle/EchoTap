{
  "name": "echotap",
  "version": "1.0.0",
  "description": "Local real-time transcription app",
  "main": "src/main/main.js",
  "author": "EchoTap Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others --kill-others-on-fail \"npm run dev:renderer\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "cross-env ELECTRON_RENDERER_URL=http://localhost:5173 electron .",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --port 8888",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "electron-builder",
    "start": "electron .",
    "test": "vitest",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "setup": "npm install && npm run install:backend",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "@types/node": "^20.5.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^37.4.0",
    "electron-builder": "^24.6.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.1.6",
    "vite": "^6.3.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-static-copy": "^3.1.1",
    "vitest": "^3.2.4",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.26",
    "@vueuse/core": "^10.3.0",
    "electron-store": "^8.1.0",
    "fuse.js": "^6.6.2",
    "pinia": "^2.1.6",
    "prettier": "^3.6.2",
    "vue": "^3.3.4",
    "ws": "^8.13.0"
  },
  "build": {
    "appId": "com.echotap.app",
    "productName": "EchoTap",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "!backend/__pycache__",
      "!backend/.pytest_cache",
      "!backend/venv"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*",
          "!__pycache__",
          "!.pytest_cache",
          "!venv"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "arch": [
        "x64"
      ]
    },
    "linux": {
      "target": "AppImage",
      "arch": [
        "x64"
      ]
    }
  }
}
