{
  "name": "echotap",
  "version": "1.0.0",
  "description": "Local real-time transcription app",
  "main": "src/main/main.js",
  "author": "EchoTap Team",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others --kill-others-on-fail \"npm run dev:renderer\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "cross-env ELECTRON_RENDERER_URL=http://localhost:5173 electron .",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --port 8888",
    "build": "npm run build:renderer && npm run build:python && npm run build:main",
    "build:renderer": "vite build",
    "build:python": "node scripts/build-python.js",
    "build:main": "electron-builder",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "start": "electron .",
    "test": "vitest",
    "test:backend": "cd backend && python -m pytest test_main.py -v",
    "test:frontend": "vitest run",
    "test:all": "npm run test:backend && npm run test:frontend",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "setup": "npm install && npm run install:backend",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@vue/test-utils": "^2.4.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "28.3.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.4.2",
    "vite": "^6.3.4",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-static-copy": "^3.1.1",
    "vitest": "^3.2.4",
    "vue": "^3.4.21",
    "vue-tsc": "^2.0.6"
  },
  "dependencies": {
    "@ricky0123/vad-web": "^0.0.24",
    "@tailwindcss/vite": "^4.1.4",
    "electron-store": "^8.1.0",
    "pinia": "^3.0.3",
    "prettier": "^3.6.2",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.echotap.app",
    "productName": "EchoTap",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "backend/**/*",
      "node_modules/**/*",
      "!backend/__pycache__",
      "!backend/.pytest_cache",
      "!backend/venv",
      "!backend/*.pyc",
      "!backend/**/*.pyc"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/",
        "filter": [
          "**/*",
          "!__pycache__",
          "!.pytest_cache",
          "!venv",
          "!*.pyc",
          "!**/*.pyc"
        ]
      },
      {
        "from": "build/python/",
        "to": "python/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
